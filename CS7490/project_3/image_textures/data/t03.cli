# two textured triangles (making a square)

fov 60
point_light 0 0 0 1 1 1
background 0.1 0.1 0.2

diffuse   0.8 0.8 0.8   0.1 0.1 0.1
image_texture  world_map_small.jpg

translate -1 -0.5 -2
scale 2 1 1

begin
texture_coord 0 0
vertex  0 0 0
texture_coord 0 1
vertex  0 1 0
texture_coord 1 0
vertex   1 0 0
end

begin
texture_coord 1 0
vertex  1 0 0
texture_coord 1 1
vertex  1 1 0
texture_coord 0 1
vertex  0 1 0
end

# sphere 0.5  0 0 -2

write t03.png
